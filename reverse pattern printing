import java.util.Scanner;

public class MyClass
{
    public static void main(String args[])
    {
        Scanner sobj= new Scanner(System.in);
        int n= sobj.nextInt();
        int i=n, j=1;
        while(i>=0)
        {
            while (j<=i)
            {
                System.out.print("*");
                j++;
            }
            System.out.println("");
            i--;
            j=1;
        }
    }
}
